@model IEnumerable<EstudiantesMateriasCrudApp.Domain.Models.Estudiante>

@{
    ViewData["Title"] = "Lista de Estudiantes";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Documento</th>
            <th>Correo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var estudiante in Model)
        {
            <tr>
                <td>@estudiante.Nombre</td>
                <td>@estudiante.Documento</td>
                <td>@estudiante.Correo</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@estudiante.Id" class="btn btn-sm btn-primary">Editar</a>
                    <a asp-action="Delete" asp-route-id="@estudiante.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Agregar Nuevo Estudiante</a>
